<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CalorieTrackingApp.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
      
        @if (User.Identity.IsAuthenticated)
        {
            <div class="w3-top">
                <div class="w3-bar w3-white w3-card w3-left-align w3-large">
                    <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-orange" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
                    <a href="/Dashboard/index" class="w3-bar-item w3-button w3-padding-large w3-white w3-hover-orange">Home</a>
                    <a href="/home/index" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-orange">Dashboard</a>
                    <a href="/home/profil" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-orange">Profile</a>
                    <a href="/login/signout" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-orange w3-right">Sign Out</a>
                    <a class="w3-bar-item w3-hide-small w3-padding-large w3-right">@User.Identity.Name</a>


                </div>
            </div>
                }
                else
                {
                <div class="w3-top">
                    <div class="w3-bar w3-white w3-card w3-left-align w3-large">
                        <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-orange" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
                        <a href="/dasboard/index" class="w3-bar-item w3-button w3-padding-large w3-white w3-hover-orange">Home</a>
                        <a href="/login/index" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-orange w3-right">Sign In</a>

                    </div>
                </div>
                }

        </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - CalorieTrackingApp.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <footer class="w3-container w3-orange w3-center w3-margin-top">
        <p class="w3-text-white">Gastronot &#169;2021 </p>
        <p class="w3-text-white">sitemap</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
