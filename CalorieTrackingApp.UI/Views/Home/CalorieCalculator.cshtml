<!-- Start your project here-->
<div class="card text-center border-warning-color-dark"
     style="max-width: 50rem; margin: auto; border: 3px solid grey; width: 50%; margin-top: 30px; min-width: 20rem;">

    <main>


        <div class="w3-container ">
            <div class="w3-panel w3-teal w3-round-xlarge">

                <table class="table" style="border-spacing: 0rem;">
                    <form>
                        <tr>
                            <td class="T">Gender</td>
                            <td class="I">
                                <input type="radio" name="gender" value="male" id="male" checked="checked"> Male &nbsp &nbsp
                                <input type="radio" name="gender" value="female" id="female"> Female
                            </td>
                        </tr>
                        <tr>
                            <td class="T">Age</td>
                            <td class="I" id="AT">
                                <input type="number" min="0" id="age" placeholder=""><div style="display: none;" id="ATT">Please enter valid number</div>
                            </td>
                        </tr>
                        <tr>
                            <td class="T">Weight</td>
                            <td class="I">
                                <input type="number" min="0" id="weight"
                                       placeholder="Kg"><div style="display: none;" id="WTT">Please enter valid number</div>
                            </td>
                        </tr>
                        <tr>
                            <td class="T">Height</td>
                            <td class="I">
                                <input type="number" min="0" id="height"
                                       placeholder="Cm"><div style="display: none;" id="HTT">Please enter valid number</div>
                            </td>
                        </tr>
                    </form>

                    <tr>
                        <td class="T">Exercise level<p>/Activity</p></td>
                        <td>
                            <select class="custom-select custom-select-sm"
                                    style="width: 70%; margin: auto;  margin-top: 12px;">
                                <!--KONO DIO DA -->
                                <option value="0" id="0">Basal Metabolic Rate (BMR)</option>
                                <option value="1" id="1">Little/No exercise</option>
                                <option value="2" id="2">Low activity (exercise 1-3 times/week)</option>
                                <option value="3" id="3">Active (daily exercise or intense exercise 3-4 times/week)</option>
                                <option value="4" id="4">High activity (intense exercise 6-7 times/week)</option>
                                <option value="5" id="5">Very high activity (very intense exercise daily, or physical job)</option>
                            </select>
                        </td>
                    </tr>
                </table>

                <!-- UwU -->
                <button id="B" type="button" onclick="calc()" class="btn btn-amber"
                        style="width: 300px; margin: auto; margin-bottom: 25px; border-radius: 25px;">
                    Calculate
                </button>
            </div>
            
            <!-- Score -->
            <div class="w3-container">
                <div class="w3-panel w3-teal w3-round-xlarge" id="Final">
                    <table style="margin-top: 15px;">
                        <tr>
                            <td class="T" style="font-weight: bold;">
                                Maintain weight <p></p>
                            </td>
                            <td><div id="a" class="SS">&nbsp</div><div class="CD">Calories/day</div></td>
                        </tr>
                        <tr>
                            <td class="T" style="font-weight: bold;">
                                Weight loss <p style="font-size: small; color:#888; font-weight: lighter;">0.5 kg/week</p>
                            </td>
                            <td><div id="b" class="SS">&nbsp</div><div class="CD">Calories/day</div></td>
                        </tr>
                        <tr>
                            <td class="T" style="font-weight: bold;">
                                Weight gain <p style="font-size: small; color:#888; font-weight: lighter;">0.5 kg/week</p>
                            </td>
                            <td><div id="c" class="SS">&nbsp</div><div class="CD">Calories/day</div></td>
                        </tr>
                    </table>
                    <form asp-action="CalorieCalculator" asp-controller="home" method="post">
                        <div>
                            <label style="color:black; font-weight:bold">Target Calorie:</label>
                            <input type="number" min="0" name="TargetCalorie" value="" />
                            <input type="hidden" name="UserId" value="@ViewData["UserId"]"/>
                            <button style="width: 300px; margin: auto;margin-top:10px; margin-bottom: 25px; border-radius: 25px;" type="submit">Target Calorie</button>
                        </div>
                    </form>
                </div>
               
            </div>
            
    </main>
    </div>
    
<script src="~/js/calculatorScript.js"></script>

